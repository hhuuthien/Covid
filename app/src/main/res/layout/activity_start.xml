<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".StartActivity"
    tools:ignore="ContentDescription, SpUsage, HardcodedText">

    <ImageView
        android:id="@+id/s_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/virus2" />

    <TextView
        android:id="@+id/s_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/s_img"
        android:layout_alignBottom="@id/s_img"
        android:fontFamily="@font/gg_bold"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/s_textvn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_img"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/gg_medium"
        android:text="Việt Nam"
        android:textColor="#0b2239"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/s_textvntime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_textvn"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/gg_regular"
        android:text="Cập nhật lúc"
        android:textColor="#9A9A9A"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/s_textvnmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/s_textvn"
        android:layout_alignEnd="@id/s_textvn"
        android:layout_alignBottom="@id/s_textvn"
        android:fontFamily="@font/gg_regular"
        android:gravity="center_vertical"
        android:text="Xem chi tiết"
        android:textSize="13dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/s_cardvn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_textvntime"
        android:layout_margin="12dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/lay1vn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="Ca nhiễm"
                    android:textAlignment="center"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="Tử vong"
                    android:textAlignment="center"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="Bình phục"
                    android:textAlignment="center"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2vn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay1vn"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/num_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/num_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/num_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#4CAF50"
                    android:textSize="22dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/s_texttg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_cardvn"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/gg_medium"
        android:text="Thế giới"
        android:textColor="#0b2239"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/s_texttgmore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/s_texttg"
        android:layout_alignEnd="@id/s_texttg"
        android:layout_alignBottom="@id/s_texttg"
        android:fontFamily="@font/gg_regular"
        android:gravity="center_vertical"
        android:text="Xem chi tiết"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/s_texttgtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_texttg"
        android:layout_marginStart="18dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="@font/gg_regular"
        android:text="Cập nhật lúc"
        android:textColor="#9A9A9A"
        android:textSize="11dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/s_cardtg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/s_texttgtime"
        android:layout_margin="12dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/lay1tg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="Ca nhiễm"
                    android:textAlignment="center"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="Tử vong"
                    android:textAlignment="center"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="Bình phục"
                    android:textAlignment="center"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay2tg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lay1tg"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/num_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/num_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/num_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gg_regular"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#4CAF50"
                    android:textSize="22dp" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        tools:context=".VietNamActivity"
        tools:ignore="ContentDescription, SpUsage, HardcodedText">

        <ImageView
            android:id="@+id/vn_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@drawable/virus3" />

        <TextView
            android:id="@+id/vn_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/vn_img"
            android:layout_alignBottom="@id/vn_img"
            android:fontFamily="@font/gg_bold"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:text="Covid-19\nViệt Nam"
            android:textColor="@android:color/white"
            android:textSize="22dp" />

        <TextView
            android:id="@+id/vn_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vn_img"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:drawablePadding="5dp"
            android:fontFamily="@font/gg_medium"
            android:text="Phân bố theo địa phương"
            android:textColor="#0b2239"
            android:textSize="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/vn_list"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/vn_text1"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/vn_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vn_list"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:drawablePadding="5dp"
            android:fontFamily="@font/gg_medium"
            android:text="Chi tiết bệnh nhân"
            android:textColor="#0b2239"
            android:textSize="16dp" />

        <RelativeLayout
            android:id="@+id/vn_list2_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/vn_text2">

            <RadioGroup
                android:id="@+id/rad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="26dp"
                android:layout_marginBottom="4dp"
                android:checkedButton="@id/rad1"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rad1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/gg_regular"
                    android:text="Tất cả" />

                <RadioButton
                    android:id="@+id/rad2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/gg_regular"
                    android:text="Đang điều trị" />

                <RadioButton
                    android:id="@+id/rad3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/gg_regular"
                    android:text="Đã khỏi bệnh" />
            </RadioGroup>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/vn_list2"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/rad"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="8dp"
                android:scrollbars="vertical" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
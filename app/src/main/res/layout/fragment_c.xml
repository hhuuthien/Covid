<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".CFragment"
    tools:ignore="HardcodedText,SpUsage">

    <androidx.cardview.widget.CardView
        android:id="@+id/v_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight">

            <TextView
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gg_regular"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="Đường dây nóng"
                android:textColor="@android:color/black"
                android:textSize="14dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:gravity="center">

                <TextView
                    android:id="@+id/phone1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gg_bold"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="19009095"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/phone2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/phone1"
                    android:layout_alignBottom="@id/phone1"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/phone1"
                    android:fontFamily="@font/gg_bold"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="19003228"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/c_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_card"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimaryLight"
        android:orientation="horizontal"
        android:padding="4dp"
        tools:ignore="HardcodedText, SpUsage">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:fontFamily="@font/gg_regular"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="Bệnh viện"
            android:textColor="@android:color/black"
            android:textSize="13dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gg_regular"
            android:gravity="center"
            android:padding="10dp"
            android:text="Điện thoại"
            android:textColor="@android:color/black"
            android:textSize="13dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/c_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/c_title"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorDarkLight"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IFragment"
    tools:ignore="HardcodedText,SpUsage">

    <LinearLayout
        android:id="@+id/ilay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/ilay11"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gg_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Triệu chứng,\nlây nhiễm"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ilay12"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gg_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Cách ly"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ilay13"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gg_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Điều trị"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ilay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ilay1"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/ilay21"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gg_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Chính sách"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ilay22"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gg_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Giao tiếp xã hội mùa dịch"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ilay23"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/gg_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="Vệ sinh\nphòng dịch"
                android:textColor="@android:color/black"
                android:textSize="12dp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/i_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ilay2"
        android:layout_margin="12dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
</RelativeLayout>
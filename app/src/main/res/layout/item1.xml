<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    tools:ignore="HardcodedText, SpUsage">

    <TextView
        android:id="@+id/lay0"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/lay1"
        android:layout_alignBottom="@id/lay2"
        android:layout_marginEnd="3dp"
        android:fontFamily="@font/gg_medium"
        android:gravity="center"
        android:padding="5dp"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lay0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ipa_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/gg_regular"
            android:maxLines="1"
            android:padding="3dp"
            android:text="Nam, 19 tuổi"
            android:textColor="@android:color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/ipa_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/gg_regular"
            android:maxLines="1"
            android:padding="3dp"
            android:text="Đang điều trị"
            android:textColor="@android:color/black"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay1"
        android:layout_toEndOf="@id/lay0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ipa_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/gg_regular"
            android:maxLines="1"
            android:padding="3dp"
            android:text="Quốc tịch Việt Nam"
            android:textColor="@android:color/black"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/ipa_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/gg_regular"
            android:maxLines="1"
            android:padding="3dp"
            android:text="Điều trị ở Thái Bình"
            android:textColor="@android:color/black"
            android:textSize="13dp" />
    </LinearLayout>
</RelativeLayout>
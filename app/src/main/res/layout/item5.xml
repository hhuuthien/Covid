<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="100dp"
    android:layout_margin="4dp"
    android:gravity="center"
    tools:ignore="HardcodedText, SpUsage">

    <TextView
        android:id="@+id/con_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gg_regular"
        android:text="Châu Á"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/con_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/con_name"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/gg_regular"
        android:text="Châu Á"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/con_recover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/con_case"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/gg_regular"
        android:text="Châu Á"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/con_death"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/con_recover"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/gg_regular"
        android:text="Châu Á"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="12dp" />
</RelativeLayout>